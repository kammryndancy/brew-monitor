{
  "appenders": {
    "app": {
      "type": "file",
      "filename": "./log/app.log",
      "maxLogSize": 10485760
    },
    "errorFile": {
      "type": "file",
      "filename": "./log/errors.log"
    },
    "errors": {
      "type": "logLevelFilter",
      "level": "ERROR",
      "appender": "errorFile"
    }
  },
  "categories": {
    "default": { "appenders": [ "app", "errors" ], "level": "DEBUG" }
  }
}